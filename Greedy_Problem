#include <iostream>
#include <bits/stdc++.h>
using namespace std;
int main()
{
	int t;
	cin>>t;
	while(t--)
	{
		int N ,K;
		cin>>N;
		cin>>K;
		int item[N],i=0;
		for(i=0;i<N;i++)
		{
			cin>>item[i];
		}
		int son=0,chef=0;
		for(i=0;i<N;i++){
			sort(item, item + N);
			chef+=item[i];
			
		}
		for(i=0;i<K;i++)
		{
			son+=item[i];
			
		}
		int diff=chef-son;
		cout<<diff;
	}
}
